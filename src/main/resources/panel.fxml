<?xml version="1.0" encoding="utf-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="gb.lindx.fm.PanelController" alignment="center">

  <HBox>
    <ComboBox fx:id="disksBox" onAction="#selectionDisk" />
    <TextField HBox.hgrow="ALWAYS" editable="false" fx:id="dirField" />
    <Button text="Up" onAction="#btnUpWalking" />
  </HBox>
  <TableView fx:id="filesTable" VBox.vgrow="ALWAYS" />

  <properties>
    <ctrl>
      <fx:reference source="controller" />
    </ctrl>
  </properties>

</VBox>